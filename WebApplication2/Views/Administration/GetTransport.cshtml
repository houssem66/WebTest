
@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model IList<TourMe.Data.Entities.ServiceTransport>




<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Voir la liste de tous les Transport </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="AdminHome" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">Voir tous les Services Transport</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tous les comptes</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" id="myInput" placeholder="Recherche Utilisateurs" title="Type in a name" class="form-control float-right">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <table id="myTable" class="table table-bordered table-hover dataTable dtr-inline">
                            <thead>

                                <tr>
                                    <th>Id</th>
                                    <th>NbrPlaces</th>
                                    <th>Region</th>
                                    <th>Personne a contacter</th>

                                    <th>Claims</th>
                                    <th>Details</th>
                                    <th>Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>

                                        <td>
                                            @item.Id

                                        </td>
                                        <td>
                                            @item.NbrPlaces
                                        </td>
                                        <td>
                                            @item.Region
                                        </td>



                                        <td>
                                            @item.Fournisseur.PersAContact
                                        </td>

                                      

                                        <td>

                                            <span> <a asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@item.Id" class="link-btn">Delete</a></span>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>

        $("#myInput").on("keyup", function () {

            var textEnter = $(this).val();
            $("Table tr").each(function (results) {

                if (results != 0) {
                    var id = $(this).find("td").text();
                    if (id.indexOf(textEnter) != 0 && id.toLowerCase().indexOf(textEnter.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }

            });


        });

    </script>
}




