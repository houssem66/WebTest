
@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model IList<Domaine.Entities.Hôte>




<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Voir la liste de tous les Hôtes </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="AdminHome" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">Voir tous les utilisateurs</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tous les Hôtes Organisme</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" id="myInput1" placeholder="Recherche Utilisateurs" title="Type in a name" class="form-control float-right">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                         <table id="example2" class="table table-bordered table-hover">
                            <thead>

                                <tr>
                                    <th>Id</th>
                                    <th>Forme juridique</th>
                                    <th>Personne a contacter</th>

                                    <th>Nom Juridique de la société</th>
                                    <th>Email</th>
                                    <th>Region</th>
                                    <th>Code postale</th>
                                    <th>Adresse</th>

                                    <th>Actvitié</th>
                                    <th>Effective homme</th>
                                    <th>Effective femme</th>
                                    <th>Verified</th>
                                    <th>Documents</th>
                                    <th>Delete</th>
                                    <th>Verify</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @ViewBag.Orga)
                                {

                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @item.FormeJuridique
                                    </td>
                                    <td>
                                        @item.PersAContact
                                    </td>




                                    <td>
                                        @item.Titre
                                    </td>


                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.region
                                    </td>
                                    <td>
                                        @item.CodePostale
                                    </td>

                                    <td>
                                        @item.Adresse
                                    </td>

                                    <td>
                                        @item.Secteur
                                    </td>
                                    <td>
                                        @item.EffectHomme
                                    </td>
                                    <td>
                                        @item.EffectFemme
                                    </td>
                                    <td>
                                        @{if (item.Verified)
                                            { <div class="time-label">
                                                    <span class="bg-green">verfied</span>
                                                </div> }
                                            else
                                            { <div class="time-label">
                                                    <span class="bg-red">Not verfied</span>
                                                </div> }
                                        }
                                    </td>
                                    <td>
                                        @{ int i = 1;
                                            foreach (var doc in item.EmployeDocuments)
                                            {

                                                <a href="~/Files/@doc.Filepath" target="_blank">doc @i </a>
                                                i = i + 1;
                                            }
                                        }
                                    </td>

                                    <td>

                                        <span> <a asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@item.Id" class="link-btn">Delete</a></span>

                                    </td>
                                    <td>

                                        <span> <a asp-action="Verify" asp-controller="Administration" asp-route-id="@item.Id" class="link-btn">Verifier</a></span>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tous les Hôtes Individu</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" id="myInput2" placeholder="Recherche Utilisateurs" title="Type in a name" class="form-control float-right">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                         <table id="example2" class="table table-bordered table-hover">
                            <thead>

                                <tr>
                                    <th>Nom</th>
                                    <th>Prénom</th>


                                    <th>Email</th>
                                    <th>Numéro Téléphone</th>
                                    <th>Code postale</th>
                                    <th>Adresse</th>

                                    <th>Region</th>
                                    <th>Verified</th>
                                    <th>Docs</th>
                                    <th>
                                        profil
                                    </th>
                                    <th>Delete</th>
                                    <th>Verify</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in @ViewBag.Indi)
                                {

                                <tr>

                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Prenom
                                    </td>




                                    <td>
                                        @item.Email
                                    </td>


                                    <td>
                                        @item.PhoneNumber
                                    </td>
                                    <td>
                                        @item.CodePostale
                                    </td>
                                    <td>
                                        @item.Adresse
                                    </td>

                                    <td>
                                        @item.region
                                    </td>
                                    <td>
                                        @{if (item.Verified)
                                            { <div class="time-label">
                                                    <span class="bg-green">verfied</span>
                                                </div> }
                                            else
                                            { <div class="time-label">
                                                    <span class="bg-red">Not verfied</span>
                                                </div> }
                                        }
                                    </td>
                                    <td>
                                        @{ int i = 1;
                                            foreach (var doc in item.EmployeDocuments)
                                            {

                                                <a href="~/Files/@doc.Filepath" target="_blank">doc @i </a>
                                                i = i + 1;
                                            }
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="ProfilCommerc" asp-route-id="@item.Id" asp-controller="Account" class="link-btn">Details Commercant</a>
                                    </td>


                                    <td>

                                        <span> <a asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@item.Id" class="link-btn">Delete</a></span>

                                    </td>
                                    <td>

                                        <span> <a asp-action="Verify" asp-controller="Administration" asp-route-id="@item.Id" class="link-btn">Verifier le  hoste</a></span>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
        $("#myInput1").on("keyup", function () {

            var textEnter = $(this).val();
            $("Table tr").each(function (results) {

                if (results != 0) {
                    var id = $(this).find("td").text();
                    if (id.indexOf(textEnter) != 0 && id.toLowerCase().indexOf(textEnter.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }

            });


        });
        $("#myInput2").on("keyup", function () {

            var textEnter = $(this).val();
            $("Table tr").each(function (results) {

                if (results != 0) {
                    var id = $(this).find("td").text();
                    if (id.indexOf(textEnter) != 0 && id.toLowerCase().indexOf(textEnter.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }

            });


        });

    </script>
}




