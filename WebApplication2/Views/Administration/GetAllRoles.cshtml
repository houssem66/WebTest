@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "GetAllRoles";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <!-- Font Awesome -->
    <!-- Ionicons -->
    <link href="~/Theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- overlayScrollbars -->
    <link href="~/Theme/dist/css/adminlte.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="#">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body>

    @if (!(Model.Any()))
    {
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="callout callout-danger"><h5>No Roles created</h5></div>
                    <p>
                        <a  asp-action="CreateRole" class="btn btn-primary btn-block">Create New</a>
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover dataTable dtr-inline">
            <thead>
                <tr>

                    <th style="width: 60%">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th style="width: 30%">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-primary btn-block">EditRole</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Administration" asp-route-id="@item.Id" class="btn btn-primary btn-block">DeleteRole</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <p>
            <a class="btn btn-primary btn-block" asp-action="CreateRole" >Create New</a>
        </p>
    }
</body>
</html>