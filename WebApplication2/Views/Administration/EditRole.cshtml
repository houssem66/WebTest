@model TourMe.Web.Models.EditRoleViewModel

@{

    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">  Mise a jour de role @Model.RoleName</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="GetAllRoles" asp-controller="Administration">Voir tous les rôles</a></li>
                    <li class="breadcrumb-item active">Edit rôle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<section class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-secondary">
                <div class="card-header">
                    <h4>Role to Edit</h4>
                </div>
                <div class="card-body">

                    <div>
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="input-group mb-3">

                                <input asp-for="RoleName" placeholder="Nom" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>

                            </div>

                            <div class="row">

                                <!-- /.col -->
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary ">EditRole</button>
                                    <a asp-action="GetAllRoles" class="btn btn-primary">Cancel</a>
                                </div>
                                <!-- /.col -->
                            </div>




                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="card card-secondary">
                <div class="card-header">
                    <h4>Users in This role</h4>
                </div>

                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>