@model TourMe.Web.Models.CreateViewModel


@{
    
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Create Role</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="GetAllRoles" asp-controller="Administration">Voir tous les rôles</a></li>
                    <li class="breadcrumb-item active">Ajouter un rôle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="content">
    <div class="row">
        <div class="col-sm-8">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create role</h3>
                </div>
                <form method="post" enctype="multipart/form-data">
                   
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label> Entrer le nouveau Rôle</label>
                            <input asp-for="RoleName" placeholder="Nom" class="form-control" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>


                        </div>
                        
                    </div>
                   

                        <!-- /.col -->
                    <div class="card-footer">
                       
                            <button type="submit" class="btn btn-primary ">CreateRole</button>
                       
                    </div>
                        
                </form>
            </div>
        </div>
    </div>
</div>

