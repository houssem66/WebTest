</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    @{ var path = "~/wizard/assets/img/paper-1.jpeg";}
    <!-- End Google Tag Manager (noscript) -->
    <div class="image-container set-full-height" style="background-image: url(@Url.Content(path));">
        <!--   Creative Tim Branding   -->
        <a href="https://creative-tim.com">
            <div class="logo-container">
                <div class="logo">
                    <img src="~/wizard/assets/img/new_logo.png">
                </div>
                <div class="brand">
                    Tour Me
                </div>
            </div>
        </a>

        <!--  Made With Paper Kit  -->
        

        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="red" id="wizard">
                            <form action="BecomeCommercant" method="post" enctype="multipart/form-data">
                                <!--        You can switch " data-color="green" "  with one of the next bright colors: "blue", "azure", "orange", "red"       -->

                                <div class="wizard-header">
                                    <h3 class="wizard-title">Devenir Commercant</h3>
                                    <p class="category">BonjourNous allons vous aider à devenir un commercant.</p>
                                </div>
                                <div class="wizard-navigation">
                                    <div class="progress-with-circle">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="4" style="width: 15%;"></div>
                                    </div>
                                    <ul>
                                        <li>
                                            <a href="#service" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-map"></i>
                                                </div>
                                                Type de de service
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#Compte" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-direction-alt"></i>
                                                </div>
                                                Compte
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#informationGen" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-panel"></i>
                                                </div>
                                                Information générales
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#Documents" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-comments"></i>
                                                </div>
                                                Documents
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="service">
                                        <h5 class="info-text">Choisir le type de service ?</h5>
                                        <div class="row">
                                            <div class="col-sm-8 col-sm-offset-3">
                                                <div class="col-sm-3">
                                                    <div class="radio" data-toggle="wizard-checkbox">
                                                        <input type="radio" name="jobb" value="Transport">
                                                        <div class="card card-checkboxes card-hover-effect">
                                                            <i class="ti-map"></i>
                                                            <p>Transport</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="radio" data-toggle="wizard-checkbox">
                                                        <input type="radio" name="jobb" value="Nourriture">
                                                        <div class="card card-checkboxes card-hover-effect">
                                                            <i class="ti-panel"></i>
                                                            <p>Nourriture</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="radio" data-toggle="wizard-checkbox">
                                                        <input type="radio" name="jobb" value="Logement">
                                                        <div class="card card-checkboxes card-hover-effect">
                                                            <i class="ti-star"></i>
                                                            <p>Logement</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="Compte">
                                        <div class="row">
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="~/wizard/assets/img/default-avatar.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                                                        <input asp-for="FileP" id="wizard-picture">
                                                    </div>
                                                    <h6>Choisir Photo profile</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Nom Prénom Dirigeant <small>(required)</small></label>
                                                    <input name="NomGerant" type="text" class="form-control" placeholder="Nom dirigeant">
                                                </div>
                                                <div class="form-group">
                                                    <label>Personne a contacter <small>(optional)</small></label>
                                                    <input name="PersAContact" type="text" class="form-control" placeholder="Personne a contacter">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Email <small>(required)</small></label>
                                                    <input asp-for="Email" class="form-control" placeholder="andrew@creative-tim.com">
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Saisir votre Mot de passe<small>(required)</small></label>
                                                    <input asp-for="Password" class="form-control" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Confirmer votre Mot de passe<small>(required)</small></label>
                                                    <input asp-for="ConfirmPassword" class="form-control" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="informationGen">
                                        <h5 class="info-text">Dites-nous plus d'informations générales </h5>
                                        <div class="row">
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Pays</label>
                                                    <select asp-for="PhoneNumberCountryCode" class="form-control" placeholder="Choisir pays" asp-items="@ViewBag.countries"></select>
                                                    <span asp-validation-for="PhoneNumberCountryCode" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Numéro Téléphone</label>
                                                    <input asp-for="Telephone" class="form-control">
                                                    <span asp-validation-for="Telephone" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Entrer Votre Secteur </label>
                                                    <input asp-for="Secteur" class="form-control" placeholder="Alimentaire">
                                                    <span asp-validation-for="Secteur" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Entrer le titre d' entreprise</label>
                                                    <input asp-for="Titre" class="form-control">
                                                    <span asp-validation-for="Titre" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Entrer Votre Effective Homme </label>
                                                    <input asp-for="EffectHomme" class="form-control" placeholder="Chiffre">
                                                    <span asp-validation-for="EffectHomme" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Entrer Votre Effective Femme </label>
                                                    <input asp-for="EffectFemme" class="form-control" placeholder="chiffre">
                                                    <span asp-validation-for="EffectFemme" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="Documents">
                                        <div class="row">
                                            <h5 class="info-text"> Document et Numéro fiscale </h5>
                                            <div class="col-sm-6 col-sm-offset-1">
                                                <div class="form-group">
                                                    <div class="custom-file">
                                                        <input asp-for="Documents" multiple class="form-control custom-file-input">
                                                        <label class="custom-file-label">Choose File...</label>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Documents a Télécharger</label>
                                                    <p class="description">
                                                        -Patente.<br />
                                                        -Carte d'exploitation ou liscense si necessaire (ca depend de  service choisi).<br />
                                                                                                                                       <h5> -Un administrateur Va vérifier votre inscription.</h5>
                                                    </p>
                                                </div>
                                            </div>
                                            
                                            
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-4 ">
                                                <div class="form-group">
                                                    <label>Saisir l'identifiant fiscale</label>
                                                    <input asp-for="Identifiant_fiscale" class="form-control" placeholder="12345678">
                                                    <span asp-validation-for="Identifiant_fiscale" class="text-danger"></span>
                                                </div>                                            
                                            </div>
                                            <div class="col-sm-2">
                                                <div class="form-group">
                                                    <label>/  Catégorie</label>
                                                    <select class="form-control" name="TypeFiscale">
                                                        <option disabled="" selected="">- choose a space -</option>
                                                        <option>H</option>
                                                        <option>X</option>
                                                    </select>



                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="wizard-footer">
                                        <div class="pull-right">
                                            <input type='button' class='btn btn-next btn-fill btn-danger btn-wd' name='next' value='Next' />
                                            <input type='submit' class='btn btn-finish btn-fill btn-danger btn-wd' name='finish' value='Finish' />
                                        </div>

                                        <div class="pull-left">
                                            <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    @*script for showing multiple files*@
                                    @section Scripts {
                                        <script>
                                            $(document).ready(function () {
                                                $('.custom-file-input').on("change", function () {
                                                    var fileLabel = $(this).next('.custom-file-label');
                                                    var files = $(this)[0].files;
                                                    if (files.length > 1) {
                                                        fileLabel.html(files.length + ' files selected');
                                                    }
                                                    else if (files.length == 1) {
                                                        fileLabel.html(files[0].name);
                                                    }
                                                });
                                            });
                                        </script>
                                    }
</form>
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->

        <div class="footer">
           
        </div>
        
    </div>
    <script src="~/wizard/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/wizard/assets/js/demo.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src="~/wizard/assets/js/jquery.validate.min.js" type="text/javascript"></script>
</body>

<!--   Core JS Files   -->


</html>

