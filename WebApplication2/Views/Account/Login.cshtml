<section>
    <div class="tr-register col-6">
        <div class="tr-regi-form">
            <h4>Se connecter</h4>
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>




                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <label>Password</label>
                    </div>
                </div>






                <div class="row">
                    <div class="input-field col s12">
                        <input asp-for="Password" placeholder="Mot de passe" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <label>Password</label>
                    </div>
                </div>


                <div class="row">
                    <div class="input-field col s12">
                        <input type="submit" value="LogIn" class="waves-effect waves-light btn-large full-btn">
                    </div>
                </div>
            </form>
            <p>
                Pas de compte ? <a asp-controller="Account" asp-action="RegisterUser">Cliquez pour le créer</a>
            </p>

            <div>
                <h1>External Login</h1>
                @{
                    if (Model.ExternalLogins.Count == 0)
                    {


                        <div>No external logins configured</div>
                    }



                    else
                    {<form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                         <div class="social-auth-links text-center">

                             @foreach (var provider in Model.ExternalLogins)
                             {<button name="provider" value="@provider.Name" title="Login usin your @provider.DisplayName account" type="submit" class="btn btn-block btn-primary">
                                     <i class="fab fa-facebook mr-2"></i>
                                     @provider.DisplayName

                                 </button>
                                 }
                         </div>
                        </form>}
                }
            </div>
        </div>

    </div>





</section>









