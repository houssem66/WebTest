            </div>
            <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                <table>
                    <td>

                        <span href="#">
                            S’inscrire avec

                        </span>

                    </td>

                    @{
                        if (Model.ExternalLogins.Count == 0)
                        {


                            <div>No external logins configured</div>
                        }



                        else
                        {


                            @foreach (var provider in Model.ExternalLogins)

                            {
                                <td style="width:20%">
                                    <button asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" name="provider" value="@provider.Name" title="Login usin your @provider.DisplayName account" type="submit" class="txt2">

                                        @provider.DisplayName

                                    </button>
                                </td>
                            }


                        }
                    }







                </table>


            </form>

        </div>
