</head>

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    @{ var path = "~/wizard/assets/img/paper-1.jpeg";}
    <!-- End Google Tag Manager (noscript) -->
    <div class="image-container set-full-height" style="background-image: url(@Url.Content(path));">
        <!--   Creative Tim Branding   -->
        <a asp-action="Index" asp-controller="Home">
            <div class="logo-container">
                <div class="logo">
                    <img src="~/wizard/assets/img/new_logo.png">
                </div>
                <div class="brand">
                    Tour Me
                </div>
            </div>
        </a>

        <!--  Made With Paper Kit  -->
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="green" id="wizard">
                            <form action="RegisterCommercant" method="post" enctype="multipart/form-data">
                                <!--        You can switch " data-color="green" "  with one of the next bright colors: "blue", "azure", "orange", "red"       -->

                                <div class="wizard-header" id="5dmt">
                                    <h3 class="wizard-title">Devenir Commercant</h3>
                                    <p id="demo" style="font-size:18px;" class="category">Bonjour nous allons vous aider à devenir un commercant.</p>
                                </div>
                                <div class="wizard-navigation">
                                    <div class="progress-with-circle">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="5" style="width: 15%;"></div>
                                    </div>
                                    <ul>
                                        <li>
                                            <a href="#Introduction" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-help"></i>
                                                </div>
                                                Introduction
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#Compte" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-email"></i>
                                                </div>
                                                Compte
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#service" data-toggle="tab">
                                                <div class="icon-circle">
                                                    <i class="ti-archive"></i>
                                                </div>
                                                Informations essentiels
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                                <div class="tab-content">
                                    <div class="tab-pane" id="Introduction">
                                        <div class="row">
                                            <h5 class="info-text">C'est qui un hôte</h5>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group"> 
                                                    <p class="description">
                                                        <b>Devenir un hôte vous permet de créer des experiences </b><br />
                                                        <b>1-Devenir vous permet de créer des experiences</b>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="service">

                                        <div class="row">
                                            <h5 class="info-text"> Documents et Adresse  </h5>
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="form-group">
                                                    <div class="custom-file">
                                                        <label class="custom-file-label">Veulleir Telecharger un copie de  la patente<small>(PDF)</small>...</label>
                                                        <input asp-for="Documents" id="PATENTEUPLOAD" multiple class="form-control custom-file-input">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="custom-file">
                                                        <label class="custom-file-label">Veulleir Telecharger un copie de  la CIN</label>
                                                        <input asp-for="Documents" id="RNEUPLOAD" multiple class="form-control custom-file-input">
                                                    </div>

                                                </div>

                                            </div>


                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Documents a Télécharger</label>
                                                    <p class="description" id="docs">
                                                        <b>-Patente.</b><br />
                                                        <b>-CIN</b><br />
                                                        <b id="writing"></b>

                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label>Veuiller saisir votre CodePostale</label>
                                                    <input asp-for="CodePostale" class="form-control" />
                                                    <span asp-validation-for="CodePostale" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label>Veuiller saisir votre Adresse</label>
                                                    <input asp-for="Adresse" class="form-control" />
                                                    <span asp-validation-for="Adresse" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="Compte">
                                        <div class="row">
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="~/wizard/assets/img/default-avatar.jpg" class="picture-src" id="wizardPicturePreview" title="" />
                                                        <input asp-for="FileP" id="wizard-picture">
                                                    </div>
                                                    <h6>Choisir photo de profil </h6>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Votre Nom <small>(required)</small></label>
                                                    <input name="Titre" type="text" class="form-control" placeholder="Nom Juridique de la société">
                                                </div>
                                                <div class="form-group">
                                                    <label>Votre Prenom <small>(optional)</small></label>
                                                    <input name="PersAContact" type="text" class="form-control" placeholder="Personne a contacter">
                                                </div>
                                            </div>

                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Pays</label>
                                                    <select asp-for="PhoneNumberCountryCode" class="form-control" id="country" placeholder="Choisir pays" asp-items="@ViewBag.countries"></select>
                                                    <span asp-validation-for="PhoneNumberCountryCode" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Numéro Téléphone</label>
                                                    <input asp-for="Telephone" class="form-control">
                                                    <span asp-validation-for="Telephone" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-sm-7 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Email <small>(required)</small></label>
                                                    <input asp-for="Email" class="form-control" placeholder="andrew@creative-tim.com">
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Saisir votre Mot de passe<small>(required)</small></label>
                                                    <input asp-for="Password" class="form-control" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Confirmer votre Mot de passe<small>(required)</small></label>
                                                    <input asp-for="ConfirmPassword" class="form-control" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="wizard-footer">
                                        <div class="pull-right">
                                            <input type='button' class='btn btn-next btn-fill btn-wd btn-primary' name='next' value='Next' />
                                            <input type='submit' class='btn btn-finish btn-fill btn-danger btn-wd' name='finish' value='Valider' />
                                            <input type='button' class="btn btn-success" id="button" name='Confirm' value='Reviser' />
                                        </div>

                                        <div class="pull-left">
                                            <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->

        <div class="footer">

        </div>

    </div>
    <script src="~/wizard/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/wizard/assets/js/demo.js" type="text/javascript"></script>
    <script src="~/wizard/assets/js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: https://jqueryvalidation.org/	 -->
    <script src="~/wizard/assets/js/jquery.validate.min.js" type="text/javascript"></script>

</body>

<!--   Core JS Files   -->


</html>
