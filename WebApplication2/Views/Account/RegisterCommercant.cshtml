
@model CommercentViewModel

@{
    ViewBag.Title = "Commerçant";
  
}




<script src="~/Theme/plugins/jquery/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
<div class="row">
    <h1>Information de contact</h1>
    <div class="col-md-12">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input type="radio" name="Type" value="individu" class="radioBtnClass" /> individu
                <input type="radio" name="Type" value="Organisme" class="radioBtnClass" /> Organisme

            </div>
            <script>

               $(function () {
                   $("[name=Type]").on('change', function () {
                       var value = $("input[type='radio'].radioBtnClass:checked").val();





                       $.ajax({

                    url: '@Url.Action("test","Account")',
                   data: { 'type': value },
                           type: "post",
                    success: function (data) {
                    $("#loadpartial").html(data);
                }
            });
        });
    });

            </script>



            <div class="form-group">
                <label asp-for="PersAContact">Personne à contacter</label>
                <input asp-for="PersAContact" class="form-control" />
                <span asp-validation-for="PersAContact" class="text-danger"></span>

            </div>



            <div class="form-group">



                <label asp-for="PhoneNumberCountryCode"></label>

                <select asp-for="PhoneNumberCountryCode" asp-items="@ViewBag.countries" class="form-control"></select>
                <span asp-validation-for="PhoneNumberCountryCode" class="text-danger"></span>
                <label asp-for="Telephone"></label>

                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>


            <div id="loadpartial">

            </div>

            <h1>Information de securité</h1>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Document</label>
                <div class="custom-file">

                    <input asp-for="FileP" class="form-control custom-file-input" />
                    <label class="custom-file-label">choisir votre fichier</label>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
            @*This script is required to display the selected file in the file upload element*@

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>