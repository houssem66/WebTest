@model IEnumerable<TourMe.Data.Entities.Experience>
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExperienceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExperienceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
             
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExperienceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExperienceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExperienceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
