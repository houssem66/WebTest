
@model TourMe.Data.Entities.Experience
@{
    ViewBag.Title = "Experience";

}
@using System.Linq;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <!-- Font Awesome -->
    <!-- Ionicons -->
    <link href="~/Theme/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <!-- overlayScrollbars -->
    <link href="~/Theme/dist/css/adminlte.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="#">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/Theme/Template2/css/animate.css" rel="stylesheet" />
    <link href="~/Theme/Template2/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Theme/Template2/css/style.css" rel="stylesheet" />
    <link href="~/Theme/Template2/css/materialize.css" rel="stylesheet" />
    <link href="~/Theme/Template2/css/mob.css" rel="stylesheet" />
    <link href="~/Theme/Template2/css/font-awesome.min.css" rel="stylesheet" />

</head>

<script src="~/Theme/plugins/jquery/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
<div class="card card-warning" style="float: right; width: 50%">
    <div class="card-header">
        <h1 class="card-title">Expérience</h1>
    </div>
    <div class="card card-info col-md-auto accent-green">

        <div class="col-md-12">
            <form enctype="multipart/form-data" method="post" asp-action="AffichageExperience">
                <div asp-validation-summary="All" class="text-danger"></div>





                <div class="bootstrap-switch-gray-dark">
                    <label asp-for="Titre">Titre Experience</label>
                    <input asp-for="Titre" value="@ViewBag.experience1.Titre" class="form-control" />
                    <span asp-validation-for="Titre" class="text-danger"></span>

                </div>



                <div class="form-group">
                    <label asp-for="TypeExperience">Type Experience</label>
                    <input asp-for="TypeExperience" value="@ViewBag.experience1.TypeExperience" class="form-control" />
                    <span asp-validation-for="TypeExperience" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Lieu">Lieu</label>
                    <input asp-for="Lieu" value="@ViewBag.experience1.Lieu" class="form-control" />
                    <span asp-validation-for="Lieu" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Saison">Saison</label>
                    <input asp-for="Saison" value="@ViewBag.experience1.Saison" class="form-control" />
                    <span asp-validation-for="Saison" class="text-danger"></span>
                </div>




                <div class="form-group">
                    <label asp-for="dateDebut">date Debut</label>
                    <input asp-for="dateDebut" value="@ViewBag.experience1.dateDebut" class="form-control" />
                    <span asp-validation-for="dateDebut" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="dateFin">date Fin</label>
                    <input asp-for="dateFin" value="@ViewBag.experience1.dateFin" class="form-control" />
                    <span asp-validation-for="dateFin" class="text-danger"></span>

                </div>
                <input type="hidden" asp-for="ExperienceId" value="@ViewBag.experience1.ExperienceId" />
                <div class="form-group">




                </div>
                <table class="table">
                    <thead>
                        <tr>

                            <th>
                                Details Activité
                            </th>
                            <th>
                                Image Activité
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < @ViewBag.ListeActivite.Count; i++)
                        {
                            <tr>

                                <td>
                                    <input asp-for="Activites[i].Details" value="@ViewBag.ListeActivite[i].Details" />
                                </td>
                                <td>
                                    @{var photoPath1 = "~/images/" + (@ViewBag.ListeActivite[i].Image ?? "noimage.jpg");
                                    }
                                    <img class="profile-user-img img-fluid img-circle" src="@photoPath1" asp-append-version="true" />
                                </td>


                                @*<td>
                            <a asp-action="Edit" asp-route-id="@item.ExperienceId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ExperienceId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ExperienceId">Delete</a>
                        </td>*@
                            </tr>

                        }
                    </tbody>
                </table>


                <button type="submit" class="btn btn-outline-success">Valider Expérience</button>


            </form>
        </div>
    </div>
</div>

