@model TourMe.Data.Entities.Panier;
@{ Layout = null; }
@inject SignInManager<Domaine.Entities.Utilisateur> signInManager;
@inject UserManager<Domaine.Entities.Utilisateur> userManager;
<link href="~/Theme/Template2/css/bootstrap.css" rel="stylesheet" />
<link href="~/Theme/Template2/css/materialize.css" rel="stylesheet" />
<link href="~/Theme/Template2/css/mob.css" rel="stylesheet" />
<link href="~/Theme/Template2/css/style.css" rel="stylesheet" />
<div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 padding">
    <div class="card">
        <div class="card-header p-4">
            <h2>Facture</h2>
            <div class="float-right">
                <h5 class="mb-0">Date</h5>
                <script>document.write(new Date().getDate(), '/', new Date().getMonth(), '/', new Date().getFullYear());</script>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h5 class="mb-3">Utilisateur:</h5>
                    @*<h3 class="text-dark mb-1"></h3>
                    <div>29, Singla Street</div>
                    <div>Sikeston,New Delhi 110034</div>*@
                    <div>Email: @userManager.GetUserAsync(User).Result.Email</div>
                    <div>Téléphone: @userManager.GetUserAsync(User).Result.PhoneNumber</div>
                </div>
                @*<div class="col-sm-6 ">
                    <h5 class="mb-3">To:</h5>
                    <h3 class="text-dark mb-1">Akshay Singh</h3>
                    <div>478, Nai Sadak</div>
                    <div>Chandni chowk, New delhi, 110006</div>
                    <div>Email: info@tikon.com</div>
                    <div>Phone: +91 9895 398 009</div>
                </div>*@
            </div>
            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Item</th>
                            <th>Description</th>
                            <th class="right">Price</th>
                            <th class="center">Qty</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Logments.Count != 0)
                        {
                            var totalLogement = Model.Logments.LastOrDefault().PrixParNuit * Model.NbrJoursLogement;
                            foreach (var logement in Model.Logments)
                            {
                    <tr>
                        <td class="center">1</td>
                        <td>@logement.Titre</td>
                        <td>@logement.Type</td>
                        @*<td class="left strong">Iphone 10X</td>*@
                        @*<td class="left">Iphone 10X with headphone</td>*@
                        <td class="right">@logement.PrixParNuit</td>
                        <td class="center">@Model.NbrJoursLogement</td>
                        <td class="right">@totalLogement DT</td>
                    </tr>}
                                }


                        @if (Model.Experiences.Count != 0)
                        {
                            var totalExperience = Model.Experiences.LastOrDefault().tarif * Model.Quantite;
                            foreach (var experience in Model.Experiences)
                            {
                    <tr>
                        <td class="center">1</td>
                        <td>@experience.Titre</td>
                        <td>@experience.TypeExperience</td>
                        @*<td class="left strong">Iphone 10X</td>*@
                        @*<td class="left">Iphone 10X with headphone</td>*@
                        <td class="right">@experience.tarif</td>
                        <td class="center">@Model.Quantite</td>
                        <td class="right">@totalExperience DT</td>
                    </tr>}
                                }

                        @if (Model.Transports.Count != 0)
                        {
                            var totalTransport = Model.Transports.LastOrDefault().Prix * Model.NbrJoursTrans;
                            foreach (var transport in Model.Transports)
                            {
                    <tr>
                        <td class="center">1</td>
                        <td>Transport</td>
                        <td>@transport.TypeTransport</td>
                        @*<td class="left strong">Iphone 10X</td>*@
                        @*<td class="left">Iphone 10X with headphone</td>*@
                        <td class="right">@transport.Prix</td>
                        <td class="center">@Model.NbrJoursTrans</td>
                        <td class="right">@totalTransport DT</td>
                    </tr>}
                                }

                        @if (Model.Nourittures.Count != 0)
                        {
                            var totalnourriture = Model.Nourittures.LastOrDefault().Prix * Model.NbrPlat;
                            foreach (var nourriture in Model.Nourittures)
                            {
                    <tr>
                        <td class="center">1</td>
                        <td>@nourriture.NomRestau</td>
                        <td>@nourriture.TypeResto</td>
                        @*<td class="left strong">Iphone 10X</td>*@
                        @*<td class="left">Iphone 10X with headphone</td>*@
                        <td class="right">@nourriture.Prix</td>
                        <td class="center">@Model.NbrPlat</td>
                        <td class="right">@totalnourriture DT</td>
                    </tr> }
                                } @*<tr>
        <td class="center">2</td>
        <td class="left">Iphone 8X</td>
        <td class="left">Iphone 8X with extended warranty</td>
        <td class="right">$1200</td>
        <td class="center">10</td>
        <td class="right">$12,000</td>
    </tr>
    <tr>
        <td class="center">3</td>
        <td class="left">Samsung 4C</td>
        <td class="left">Samsung 4C with extended warranty</td>
        <td class="right">$800</td>
        <td class="center">10</td>
        <td class="right">$8000</td>
    </tr>
    <tr>
        <td class="center">4</td>
        <td class="left">Google Pixel</td>
        <td class="left">Google prime with Amazon prime membership</td>
        <td class="right">$500</td>
        <td class="center">10</td>
        <td class="right">$5000</td>
    </tr>*@
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">
                </div>
                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            @*<tr>
                                <td class="left">
                                    <strong class="text-dark">Subtotal</strong>
                                </td>
                                <td class="right">$28,809,00</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">Discount (20%)</strong>
                                </td>
                                <td class="right">$5,761,00</td>
                            </tr>*@
                            @*<tr>
                                <td class="left">
                                    <strong class="text-dark">VAT (10%)</strong>
                                </td>
                                <td class="right">$2,304,00</td>
                            </tr>*@
                            <tr>
                                <td class="left">
                                    <strong class="text-dark">Total</strong>
                                </td>
                                <td class="right">
                                    <strong class="text-dark">@Model.Prix DT</strong>
                                </td>
                                <td>

                                    <form method="post" asp-action="Facture">

                                        <button type="submit">Payer</button>
                                    </form>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer bg-white">

        </div>
    </div>
</div>